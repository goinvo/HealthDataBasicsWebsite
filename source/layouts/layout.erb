<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport"
              content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="keywords" content="Health data, patient education, posters, app, consent, icons, design, open source, onboarding, free" >
        <meta name="description" content="Discover free open source posters, icons, and app designs to educate and engage individuals about health data. Learn more now!">
        <!-- Use the title from a page's frontmatter if it has one -->
        <title><%= current_page.data.title || "Health Data Basics" %></title>

        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,600" rel="stylesheet">
        <%= stylesheet_link_tag "index" %>
        <%= javascript_include_tag "site" %>


        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-10273473-29"></script>
        <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-10273473-29');
        </script>
    </head>

    <body class="background--grey">
        <header class="header-shadow">
            <div class="max-website-width">
                <div class="columns">
                    <div class="column is-half">
                        <div class= "title--left-align">
                            <%= link_to 'Health Data Basics', 'index.html', class: 'nav-title no-hover' %>
                        </div>
                    </div>
                    <%
                        nav_links = [
                            { name: 'Tools', path: 'index.html' },
                            { name: 'Process', path: 'process.html' },
                            { name: 'About', path: 'about.html' },
                            { name: 'Future', path: 'future.html'},
                            { name: 'Contact', path: 'mailto:healthdata@fastercures.org ', class: 'button no-hover position-button' }
                        ]
                    %>
                    <nav class="column is-half">
                        <ul class=" full-height nav--align-right list--unstyled">
                            <% nav_links.each do |link| %>
                                <li><%= link_to link[:name], link[:path], class: "link link--nav #{'nav--is-active' if link[:path] == current_page.path} #{link[:class] if !link[:class].nil?}" %></li>
                            <% end %>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <%= yield %>
        <footer class="max-website-width background--white">
            <div class="background--dark spacing--footer-container">
                <div class="columns">
                    <div class="column is-one-third">
                        <div class="spacing-object-sides--medium">
                            <div class="padding-bottom--medium">
                                <h6>Health Data Basics</h6>
                                <a class="link footer--text-style" href="https://www.pcori.org/">PCORI Funded Project #4202-MI </a>
                            </div>
                        </div>
                    </div>
                    <div class="column">
                        <div class="spacing-object-sides--medium">
                            <div class="padding-bottom--medium">
                                <h6>Partners</h6>
                                <ul class= "list--unstyled">
                                   <li> <i> <a class="link footer--text-style" href="http://www.fastercures.org/">FasterCures</a></i>  </li>
                                   <li> <a class="link footer--text-style" href="https://www.goinvo.com/">GoInvo </a></li>
                               </ul>
                           </div>
                        </div>
                    </div>
                    <div class="column">
                        <div class="spacing-object-sides--medium">
                            <div class="padding-bottom--medium">
                                <h6>Open Source</h6>
                                <ul class= "list--unstyled">
                                   <li><a class="link footer--text-style" href="https://github.com/goinvo/HealthDataBasics">Github Repository</a>  </li>
                                   <li> <a class="link link--inline" href="https://opensource.org/licenses/MIT">MIT License</a> </li>
                               </ul>
                            </div>
                        </div>
                    </div>
                    <div class="columm">
                        <div class="spacing-object-sides--medium">
                             <h6> Contact: </h6> 
                              <a class="link link--inline" href="mailto:healthdata@fastercures.org ">healthdata@fastercures.org </a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
